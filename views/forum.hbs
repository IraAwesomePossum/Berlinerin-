<h1>Forum</h1>

<div class="con">

  <div class="container text-center">
    <div class="container">
      <div class="row">
        <hr />
        {{#each forum}}
          <div class="col">
            <div class="profile-card-4 text-center">
              <img src="{{img}}" class="img img-responsive" />
              <div class="profile-content">
                <div class="profile-name">
                  {{name}}
                  {{#if iOffer}}
                    <p>I am offering</p>
                  {{/if}}
                  {{#if iSearch}}
                    <p>I am looking for</p>
                  {{/if}}
                  {{#if iNeedhelp}}
                    <p>I need help</p>
                  {{/if}}
                </div>
                <div class="profile-description">{{text}}</div>

                <div class="row">

                  <div class="col-xs-4">
                    <div class="profile-overview">
                      <p>Language: {{language}}</p>
                    </div>
                    <div class="col-xs-4">
                      <div class="profile-overview">
                        <button class="btn btn-primary">Contact
                          {{name}}</button>
                      </div>
                    </div>
                  </div>
                </div>

              </div>

            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<form action="/forum" method="POST">
  <ul class="form-style-1">
    <h3>Write a new post</h3>
    <li><label>Full Name <span class="required">*</span></label><input
        type="text"
        name="name"
        class="field-divided"
        placeholder="Your name"
        id="forumName"
      />
    </li>
    <li>
      <label>Language <span class="required">*</span></label>
      <input type="text" name="language" class="field-long" id="forumLanguage" />
    </li>
    <li>
      <label>What is the purpose of your post?</label>
      <select name="purpose" class="field-select" id="forumPurpose">
        <option value="iOffer">I am offering</option>
        <option value="iSearch">I am looking for</option>
        <option value="iNeedhelp">I need help</option>
      </select>
    </li>
    <li>
      <label>Your Message <span class="required">*</span></label>
      <textarea
        name="message"
        class="field-long field-textarea"
        id="forumMessage"
      ></textarea>
    </li>
    <li>
      <input type="submit" value="Submit"  />
    </li>
  </ul>
</form>